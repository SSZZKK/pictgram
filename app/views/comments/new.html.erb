<div class="comment-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">COMMENT</h1>
        <%= form_for @comment do |f| %>
          <%= f.hidden_field :topic_id, :value => @topic_id %>
          <div class="form-group">
            <!--<%= f.label :text %>-->
              <div class="col-sm-20" style="padding: 6px;">
                <textarea class='form-control  input-sm' placeholder="入力してください"></textarea>
              </div>
          </div>
      </div>
        <% if logged_in? %>
          <%= f.submit "投稿", class: "btn btn-black btn-block" %>
          <% end %>
        <% end %>
    </div>
   </div>
  </div>
</div>